{
  "manifest_version": 3,
  "name": "WhatsApp Group Scraper (Panel)",
  "version": "2.0",
  "description": "Adds a control panel to WhatsApp Web for scraping group members.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_title": "Toggle Scraper Panel"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}