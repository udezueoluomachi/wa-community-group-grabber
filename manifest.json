{
  "manifest_version": 3,
  "name": "Group Grabber",
  "version": "1.0",
  "description": "Scrape member data from WhatsApp Web groups and community forums.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ]
}